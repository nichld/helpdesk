<div id="message-popup" class="fixed z-50 bottom-4 sm:bottom-8 left-4 right-4 sm:left-1/2 sm:right-auto sm:transform sm:-translate-x-1/2 flex justify-center opacity-100">
  <div class="bg-white w-full sm:max-w-md rounded-md shadow-lg border border-zinc-200 px-3 sm:px-4 py-2 sm:py-3">
    <div class="flex flex-row gap-1 sm:gap-2 items-center">
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        width="16" 
        height="16" 
        viewBox="0 0 24 24" 
        fill="none" 
        stroke="currentColor" 
        stroke-width="2" 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        class="text-blue-500 flex-shrink-0 sm:w-5 sm:h-5"
        aria-hidden="true">
        <circle cx="12" cy="12" r="10"/>
        <path d="M12 16v-4"/>
        <path d="M12 8h.01"/>
      </svg>
      <p class="grow text-xs sm:text-sm px-1 sm:px-2"><%= message %></p>
      <button id="popup-close" class="group -my-1 -me-1 size-7 sm:size-8 shrink-0 p-1 hover:bg-gray-100 rounded-full" aria-label="Close notification">
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          width="14" 
          height="14" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round" 
          class="opacity-60 transition-opacity group-hover:opacity-100"
          aria-hidden="true">
          <path d="M18 6 6 18"/>
          <path d="m6 6 12 12"/>
        </svg>
      </button>
    </div>
  </div>
</div>